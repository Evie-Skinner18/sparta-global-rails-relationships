<p id="notice"><%= notice %></p>

<h1>Preferences</h1>
<%= link_to 'Back to Users', users_path %>
<%= link_to 'Back to Cheeses', cheeses_path %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cheeses</th>
      <th>No cheeses</th>
      <th>Tasty</th>
      <th>User</th>
      <th>Cheese</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.user %></td>
        <td><%= preference.cheeses %></td>
        <td><%= preference.no_cheeses %></td>
        <td><%= preference.tasty %></td>
        <td><%= preference.user %></td>
        <td><%= preference.cheese %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Preference', new_preference_path %>
